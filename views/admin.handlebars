<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <title>Tweiber Admin Dashboard</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
    <!-- 
    Visual Admin Template
    http://www.templatemo.com/preview/templatemo_455_visual_admin
    -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
      <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
      <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
      <link href="/public/css/templatemo-style.css" rel="stylesheet">
      <link href="http://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">

    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  </head>
  <body>  
    <!-- Left column -->
    <div class="templatemo-flex-row">
      <div class="templatemo-sidebar">
        <header class="templatemo-site-header">
          <div class="square"></div>
          <h1>Tweiber Admin</h1>
        </header>
        <div class="profile-photo-container">
          <img src="/public/img/maius.jpeg" alt="Profile Photo" class="img-responsive">  
          <div class="profile-photo-overlay"></div>
        </div>      
        <!-- Search box -->
       
        <div class="mobile-menu-icon">
            <i class="fa fa-bars"></i>
          </div>
        <nav class="templatemo-left-nav">          
          <ul>
            <li><a href="/admin/task" {{#if is_task}}class="active"{{/if}}><i class="fa fa-sliders fa-fw"></i>Tasks</a></li>
            {{!--<li><a href="/admin/pet" {{#if is_pet}}class="active"{{/if}}><i class="fa fa-github fa-fw"></i>Pet</a></li>--}}
            <li><a href="/admin/Log" {{#if is_log}}class="active"{{/if}}><i class="fa fa-database fa-fw"></i>Log</a></li>
            <li><a href="/admin/robot" {{#if is_users}}class="active"{{/if}}><i class="fa fa-users fa-fw"></i>Robots</a></li>
            <li><a href="/admin/logout" ><i class="fa fa-eject fa-fw"></i>Sign Out</a></li>
          </ul>  
        </nav>
      </div>
      <!-- Main content --> 
      <div class="templatemo-content col-1 light-gray-bg">
        <div class="templatemo-top-nav-container">
          <div class="row">
            <nav class="templatemo-top-nav col-lg-12 col-md-12">
              <ul class="text-uppercase">
                <li><a href="" class="active">Admin panel</a></li>
              </ul>  
            </nav> 
          </div>
        </div>
        <div class="templatemo-content-container">
          <div class="templatemo-content-widget no-padding">
            <div class="panel panel-default table-responsive">
              {{#if is_user}}
              <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <td><a href="" class="white-text templatemo-sort-by"># <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">weiboId <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">twitterName <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">accessTokenForWeibo <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">expiresIn <span class="caret"></span></a></td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each weiboAuth}}
                  <tr>
                    <td>{{_id}}</td>
                    <td>{{uid}}</td>
                    <td>{{twitter_name}}</td>
                    <td>{{access_token}}</td>
                    <td>{{expires_in}}</td>
                    <td><a href="" class="templatemo-edit-btn">Edit</a></td>
                    <td><a href="/admin/deUser/{{_id}}" class="templatemo-link">Delete</a></td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}
                
              {{#if is_task}}
               <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <!-- <td><a href="" class="white-text templatemo-sort-by">task_id<span class="caret"></span></a></td> -->
                    <td><a href="" class="white-text templatemo-sort-by">twitter_username <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">weibo_userid <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">ori_text <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">ori_create_at <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">standby_text <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">translation <span class="caret"></span></a></td>
                    <td>Push</td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each task}}
                  <tr>
                    <!-- <td>{{task_id}}</td> -->
                    <td>{{twitter_username}}</td>
                    <td>{{weibo_userid}}</td>
                    <td>{{ori_tweet}}</td>
                    <td>{{ori_create_at}}</td>
                    <td>{{standBy}}</td>
                    <td>{{translate}}</td>
                    <td><a href="/admin/pushSingleTask/{{task_num}}/{{tweet_num}}" class="templatemo-edit-btn">Push</a></td>
                    <td><a href="" class="templatemo-edit-btn">Edit</a></td>
                    <td><a href="/admin/deTask/{{task_id}}/{{tweet_id}}" class="templatemo-edit-btn">Delete</a></td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}

              {{#if is_log}}
               <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <!-- <td><a href="" class="white-text templatemo-sort-by">task_id<span class="caret"></span></a></td> -->
                    <td><a href="" class="white-text templatemo-sort-by">twitter_username <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">weibo_userid <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">ori_text <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">ori_create_at <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">standby_text <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">translation <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">status <span class="caret"></span></a></td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each log}}
                  <tr>
                    <!-- <td>{{task_id}}</td> -->
                    <td>{{twitter_username}}</td>
                    <td>{{weibo_userid}}</td>
                    <td>{{ori_tweet}}</td>
                    <td>{{ori_create_at}}</td>
                    <td>{{standBy}}</td>
                    <td>{{translate}}</td>
                    <td>{{status}}</td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}
            </div>                          
          </div>          
          
          {{!--<div class="pagination-wrap">
            <ul class="pagination">
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li class="active"><a href="#">3 <span class="sr-only">(current)</span></a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li>
                <a href="#" aria-label="Next">
                  <span aria-hidden="true"><i class="fa fa-play"></i></span>
                </a>
              </li>
            </ul>
          </div>          --}}
          <footer class="text-right">
            <p>Copyright &copy; 2084 Company Name | Designed by <a href="http://www.templatemo.com" target="_parent">templatemo</a></p>
          </footer>         
        </div>
      </div>
    </div>
    
    <!-- JS -->
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/public/js/templatemo-script.js"></script>      <!-- Templatemo Script -->
    <script>
      $(document).ready(function(){
        // Content widget with background image
        var imageUrl = $('img.content-bg-img').attr('src');
        $('.templatemo-content-img-bg').css('background-image', 'url(' + imageUrl + ')');
        $('img.content-bg-img').hide();        
      });
    </script>
  </body>
</html>